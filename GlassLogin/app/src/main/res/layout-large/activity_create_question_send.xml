<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_yellow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="請確認出題"
        android:background="@color/new_purple"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="30dp"
        android:textColor="@color/new_white"
        android:id="@+id/createquestionsend_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="答　案　"
        android:id="@+id/answer_tv"
        android:textSize="50dp"
        android:layout_above="@+id/hint1_tv"
        android:layout_alignLeft="@id/hint1_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="提示一　"
        android:id="@+id/hint1_tv"
        android:textSize="50dp"
        android:textColor="@android:color/white"

        android:layout_marginLeft="100dp"
        android:layout_above="@+id/hint2_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="提示二　"
        android:id="@+id/hint2_tv"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/hint1_tv"
        android:layout_alignStart="@+id/hint1_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="提示三　"
        android:id="@+id/hint3_tv"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/hint2_tv"
        android:layout_alignStart="@+id/hint2_tv"
        android:layout_below="@id/hint2_tv"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/hint3_img"
        android:onClick="set_image"
        android:layout_alignTop="@+id/hint3_tv"
        android:layout_toRightOf="@+id/hint3_tv"
        android:layout_toEndOf="@+id/hint3_tv" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="確認出題"
        android:id="@+id/questionsend_btn"
        android:background="#ffffff"
        android:textColor="#6a2a69"
        android:textSize="25dp"
        android:layout_marginRight="32dp"
        android:layout_alignBottom="@+id/hint3_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>