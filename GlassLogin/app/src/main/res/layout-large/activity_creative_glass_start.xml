<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.CreativeGlassStart"
    android:background="@mipmap/main_background">

    <ImageButton
        android:layout_width="610dp"
        android:layout_height="240dp"
        android:id="@+id/create_btn"
        android:background="#00e6ff5b"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/profile_btn"
        android:layout_alignStart="@+id/profile_btn" />

    <ImageButton
        android:layout_width="610dp"
        android:layout_height="240dp"
        android:id="@+id/answer_btn"
        android:layout_alignParentTop="true"
        android:background="#00e6ff5b"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/setting_btn"
        android:background="#00e6ff5b"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/answer_btn"
        android:layout_alignEnd="@+id/answer_btn"
        android:layout_marginRight="12dp" />

    <ImageButton
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/profile_btn"
        android:background="#00e6ff5b"
        android:layout_alignTop="@+id/answer_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/answer_btn"
        android:layout_toLeftOf="@+id/answer_btn"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
