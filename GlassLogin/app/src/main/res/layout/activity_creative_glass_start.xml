<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="10dp"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.CreativeGlassStart"
    android:background="@drawable/main_background">

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="fill_parent"
        android:id="@+id/profile_btn"
        android:background="@drawable/profile_button"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="155dp"
        android:id="@+id/create_btn"
        android:background="@drawable/create_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/answer_btn"
        android:layout_toLeftOf="@id/answer_btn"
        android:layout_toRightOf="@+id/profile_btn"
        android:layout_toEndOf="@+id/profile_btn"
        android:layout_marginTop="5dp"
        />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="155dp"
        android:id="@+id/answer_btn"
        android:background="@drawable/answer_button"
        android:layout_above="@+id/create_btn"
        android:layout_toRightOf="@+id/profile_btn"
        android:layout_toEndOf="@+id/profile_btn"
        android:layout_alignTop="@id/profile_btn"/>




</RelativeLayout>
