<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#731a89">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="提示"
        android:id="@+id/title"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="building"
        android:id="@+id/hint1_txt"
        android:textSize="40sp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/hint3"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="vertical"
        android:id="@+id/hint2_txt"
        android:textSize="40sp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/hint3"
        android:layout_alignLeft="@+id/hint1_txt"
        android:layout_alignStart="@+id/hint1_txt" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:id="@+id/hint3"
        android:background="@android:mipmap/sym_def_app_icon"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/hint1_txt"
        android:layout_toEndOf="@+id/hint1_txt"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="放棄"
        android:id="@+id/abort_btn"
        android:background="#ffffff"
        android:textColor="#6a2a69"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="作答"
        android:id="@+id/answer_btn"
        android:background="#ffffff"
        android:textColor="#6a2a69"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
