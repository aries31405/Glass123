<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.CreateQuestion.CreateHint1"
    android:background="#731a89">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="請開始出題"
        android:id="@+id/textView8"
        android:textSize="60dp"
        android:layout_marginTop="48dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="提示一"
        android:id="@+id/textView9"
        android:textSize="80dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="725dp"
        android:layout_height="45dp"
        android:id="@+id/editText"
        android:background="#ffffff"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:hint="提示一"
        android:paddingLeft="15dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="送出"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#ffffff"
        android:textColor="#6a2a69"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:id="@+id/enter"
        android:background="@drawable/enter"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/createqnext_btn"
        android:layout_toStartOf="@+id/createqnext_btn" />
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:id="@+id/createqnext_btn"
        android:background="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
