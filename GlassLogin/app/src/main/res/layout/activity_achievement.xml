<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.MyCreative.Achievement"
    android:background="@color/creative_purple">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="我的成就"
        android:layout_alignParentTop="true"
        android:background="@drawable/title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="40dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20 / 50"
        android:id="@+id/textView13"
        android:textColor="@color/white"
        android:layout_above="@+id/rate"
        android:layout_alignRight="@+id/imageView13"
        android:layout_alignEnd="@+id/imageView13" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:progress="40"
        android:indeterminate="false"
        android:progressTint="#ffbd24"
        android:progressBackgroundTint="#ffffff"
        android:layout_above="@+id/imageView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:id="@+id/imageView6"
        android:background="@drawable/a1"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:id="@+id/imageView12"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginTop="10dp"
        android:background="@drawable/a3" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:id="@+id/imageView13"
        android:layout_above="@+id/imageView12"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_marginLeft="10dp"
        android:background="@drawable/a2" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:id="@+id/imageView14"
        android:layout_alignTop="@+id/imageView12"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13"
        android:background="@drawable/a4" />

</RelativeLayout>
