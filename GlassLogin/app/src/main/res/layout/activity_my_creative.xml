<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.MyCreative.MyCreative"
    android:background="@color/new_yellow">

    <TextView
        android:id="@+id/title_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="個人檔案"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="30dp"
        android:textColor="@color/new_white"
        android:background="@color/new_purple" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mycreative_img"
        android:background="@drawable/profile"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"
        android:layout_alignBottom="@+id/correct_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="使用者"
        android:id="@+id/user"
        android:autoText="false"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/creative_purple"
        android:textSize="25dp"
        android:layout_below="@+id/mycreative_img"
        android:layout_alignLeft="@+id/mycreative_img"
        android:layout_alignStart="@+id/mycreative_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="總題數："
        android:id="@+id/all_txt"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mycreative_img"
        android:layout_toEndOf="@+id/mycreative_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="答對率："
        android:id="@+id/percentage_txt"
        android:textSize="30dp"
        android:layout_below="@+id/all_txt"
        android:layout_alignLeft="@+id/all_txt"
        android:layout_alignStart="@+id/all_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="答對題數："
        android:id="@+id/correct_txt"
        android:textSize="30dp"
        android:layout_below="@+id/percentage_txt"
        android:layout_alignLeft="@+id/percentage_txt"
        android:layout_alignStart="@+id/percentage_txt"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="答錯題數："
        android:id="@+id/wrong_txt"
        android:textSize="30dp"
        android:layout_below="@+id/correct_txt"
        android:layout_alignLeft="@+id/correct_txt"
        android:layout_alignStart="@+id/correct_txt" />

</RelativeLayout>
