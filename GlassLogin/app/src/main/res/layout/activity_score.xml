<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.AnswerQuestion.Score"
    android:background="@color/new_yellow">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/score_img"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/evaluate_btn"
        android:layout_toStartOf="@+id/evaluate_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score_txt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="300dp"
        android:layout_alignTop="@+id/score_img"
        android:textSize="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="給予評價"
        android:id="@+id/evaluate_btn"
        android:layout_below="@+id/score_txt"
        android:layout_alignLeft="@id/score_txt"
        android:layout_marginTop="50dp"
        android:background="@color/new_white"
        android:textSize="25dp"
        android:textColor="@color/new_purple" />
</RelativeLayout>
