<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.AnswerQuestion.AnswerQuestion"
    tools:showIn="@layout/activity_answer_question">

    <com.example.glass123.glasslogin.SlidingTab.SlidingTabLayout
        android:id="@+id/tabs_answer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:background="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_answer"

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/tabs_answer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></android.support.v4.view.ViewPager>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00 : 00"
        android:id="@+id/timer_txt"
        android:textColor="@color/new_blue"
        android:textSize="30dp"
        android:layout_alignTop="@+id/pager_answer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>