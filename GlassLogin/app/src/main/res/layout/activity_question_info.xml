<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="500dp"
    android:layout_height="300dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.AnswerQuestion.QuestionInfo"
    android:background="@color/new_yellow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleId_txt"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/logo" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:progress="0"
        android:indeterminate="false"
        android:layout_alignTop="@+id/titleId_txt"
        android:layout_alignRight="@+id/startans_btn"
        android:layout_alignEnd="@+id/startans_btn"
        android:progressDrawable="@drawable/progressbar" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/starinfo1_img"
        android:background="@drawable/star"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/starinfo2_img"
        android:layout_toStartOf="@+id/starinfo2_img" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/starinfo2_img"
        android:background="@drawable/star"
        android:visibility="invisible"
        android:layout_alignTop="@+id/starinfo1_img"
        android:layout_toLeftOf="@+id/starinfo3_img"
        android:layout_toStartOf="@+id/starinfo3_img" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/starinfo3_img"
        android:background="@drawable/star"
        android:visibility="invisible"
        android:layout_alignTop="@+id/starinfo2_img"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/starinfo4_img"
        android:background="@drawable/star"
        android:visibility="invisible"
        android:layout_alignTop="@+id/starinfo3_img"
        android:layout_toRightOf="@+id/starinfo3_img"
        android:layout_toEndOf="@+id/starinfo3_img" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/starinfo5_img"
        android:background="@drawable/star"
        android:visibility="invisible"
        android:layout_alignTop="@+id/starinfo3_img"
        android:layout_toRightOf="@+id/starinfo4_img"
        android:layout_toEndOf="@+id/starinfo4_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/floor_txt"
        android:textColor="#ff898989"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/author_txt"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/author_txt"
        android:textSize="30dp"
        android:textColor="#ff898989"
        android:layout_below="@+id/starinfo3_img"
        android:layout_alignRight="@+id/rate"
        android:layout_alignEnd="@+id/rate" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="關閉"
        android:id="@+id/close_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/new_white"
        android:textStyle="bold"
        android:textColor="@color/new_purple" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="開始作答"
        android:id="@+id/startans_btn"
        android:layout_alignTop="@+id/close_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/new_white"
        android:textColor="@color/new_purple"
        android:textStyle="bold" />


</RelativeLayout>

