<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="500dp"
    android:layout_height="300dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.glass123.glasslogin.CreativeGlass.AnswerQuestion.QuestionInfo"
    android:background="#ffe5df">

    <TextView android:text="NO.108" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleId_txt"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="48dp"
        android:layout_alignBottom="@+id/logo"
        android:textColor="#ff898989" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:progress="55"
        android:indeterminate="false"
        android:progressTint="#ff4e3a"
        android:progressBackgroundTint="#7885ff"
        android:layout_alignTop="@+id/titleId_txt"
        android:layout_alignRight="@+id/startans_btn"
        android:layout_alignEnd="@+id/startans_btn" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/star_imgbtn1"
        android:background="@drawable/star"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/titleId_txt"
        android:layout_alignStart="@+id/titleId_txt" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:background="@drawable/star"
        android:layout_alignTop="@+id/star_imgbtn1"
        android:layout_toRightOf="@+id/star_imgbtn1"
        android:layout_toEndOf="@+id/star_imgbtn1" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:background="@drawable/star"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="6樓"
        android:id="@+id/floor_txt"
        android:textColor="#ff898989"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/author_txt"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="林元博"
        android:id="@+id/author_txt"
        android:textSize="30dp"
        android:textColor="#ff898989"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/rate"
        android:layout_alignEnd="@+id/rate" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="關閉"
        android:id="@+id/close_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffa98d"
        android:textStyle="bold"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="開始作答"
        android:id="@+id/startans_btn"
        android:layout_alignTop="@+id/close_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffa98d"
        android:textColor="#ffffffff"
        android:textStyle="bold" />


</RelativeLayout>

