<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.glass123.glasslogin.MyProfile"
    android:background="@color/new_yellow">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="請確認你的登入資料"
        android:id="@+id/myprofile_title"
        android:layout_alignParentTop="true"
        android:background="@color/new_purple"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="30dp"
        android:textColor="@color/new_white" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myprofile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/notlogin"
        app:border_width="2dp"
        app:border_color="#55000000"
        android:layout_below="@+id/myprofile_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/myprofile_name"
        android:textSize="30dp"
        android:textColor="@color/new_white"
        android:layout_below="@+id/myprofile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/myprofile_email"
        android:textSize="20dp"
        android:textColor="@color/new_white"
        android:layout_below="@+id/myprofile_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/change_user"
        android:id="@+id/changeuser_btn"
        android:textColor="@color/new_purple"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/new_white" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/next_btn"
        android:textColor="@color/new_purple"
        android:layout_alignTop="@+id/changeuser_btn"
        android:layout_alignRight="@+id/myprofile_title"
        android:layout_alignEnd="@+id/myprofile_title"
        android:layout_marginRight="16dp"
        android:background="@color/white" />

</RelativeLayout>
